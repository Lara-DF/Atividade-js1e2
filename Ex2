<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Par ou Ímpar</title>

    <style>
        body {
            font-family: Arial;
            text-align: center;
            margin-top: 50px;
        }
        input, button {
            margin-top: 10px;
            padding: 8px;
        }
        #resultado {
            margin-top: 15px;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <h1>Verificar Par ou Ímpar</h1>

    <label>Digite um número:</label><br>
    <input type="number" id="numero"><br>

    <button onclick="verificar()">Verificar</button>

    <p id="resultado"></p>

    <script>
        function verificar() {
            let numero = document.getElementById("numero").value;
            let res = document.getElementById("resultado");

            if (numero === "" || isNaN(numero)) {
                res.textContent = "Digite um número válido!";
                return;
            }

            if (numero % 2 === 0) {
                res.textContent = numero + " é PAR.";
            } else {
                res.textContent = numero + " é ÍMPAR.";
            }
        }
    </script>

</body>
</html>
