<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Cálculo de Idade</title>

    <style>
        body {
            font-family: Arial;
            text-align: center;
            margin-top: 50px;
        }
        input, button {
            margin-top: 10px;
            padding: 8px;
        }
        #resultado {
            margin-top: 15px;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <h1>Cálculo de Idade</h1>

    <label>Ano de nascimento:</label><br>
    <input type="number" id="ano"><br>

    <button onclick="calcular()">Calcular</button>

    <p id="resultado"></p>

    <script>
        function calcular() {
            let ano = document.getElementById("ano").value;
            let res = document.getElementById("resultado");
            let atual = new Date().getFullYear();

            if (ano === "" || isNaN(ano)) {
                res.textContent = "Digite um ano válido!";
                return;
            }

            if (ano < 1900 || ano > atual) {
                res.textContent = "Ano inválido!";
                return;
            }

            let idade = atual - ano;
            res.textContent = "Você tem " + idade + " anos.";
        }
    </script>

</body>
</html>
